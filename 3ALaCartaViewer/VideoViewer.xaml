<UserControl x:Class="_3ALaCartaViewer.VideoViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_3ALaCartaViewer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border BorderThickness="3" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="tbTitle" TextWrapping="Wrap"/>
        <Image x:Name="imgVideo" Grid.Row="1" PreviewMouseLeftButtonUp="imgVideo_PreviewMouseLeftButtonUp" PreviewMouseRightButtonUp="imgVideo_PreviewMouseRightButtonUp" />
    </Grid>
    </Border>
</UserControl>
